subprojects {
    group '${option.javaGroupId}'
    version '${api.info.version}'

    apply plugin: 'java'
    apply plugin: 'maven'
    apply plugin: 'eclipse'
    apply plugin: 'idea'

    sourceCompatibility = 1.8
    targetCompatibility = 1.8

    repositories {
        jcenter()
        mavenLocal()
    }

    dependencies {
        compile group: 'org.projectlombok', name: 'lombok', version: '1.16.8'
        compile group: 'com.worksap.webapi', name: 'api-exceptions', version: '1.0-SNAPSHOT'

        // Dependency Injection
        compile group: 'javax.inject', name: 'javax.inject', version: '1'
        testCompile group: 'com.google.inject', name: 'guice', version: '4.1.0'

        // Logging
        compile group: 'org.slf4j', name: 'slf4j-api', version: '1.7.21'
        testCompile group: 'org.slf4j', name: 'slf4j-simple', version: '1.7.21'

        testCompile group: 'junit', name: 'junit', version: '4.+'
    }
}
